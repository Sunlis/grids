{
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "allowJs": false,
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "declaration": true,
    "baseUrl": ".",
    "target": "es2018",
    "module": "nodenext",
    "noImplicitAny": true,
    "removeComments": true,
    "allowUnreachableCode": true,
    "lib": [
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "dom"
    ],
    "typeRoots": [
      "./types"
    ]
  },
  "compileOnSave": false,
}
